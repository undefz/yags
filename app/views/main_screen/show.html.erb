<div class="container">
  <div class="span8">
    <div class="page-header">
    <h1>YAGS <small>Yet Another Github statistics</small></h1>
    </div>

    <%= form_tag(repo_stats_show_path, method: 'get', class: 'form-inline') do %>
      <fieldset>
        
          <%= text_field_tag 'repo_name', '', placeholder:'https://github.com/user/project' %>
          <%= submit_tag "Open", class:"btn" %>
        
      </fieldset>
    <% end %>

    <div class="alert alert-error">
      <p>Sorry, your input does not look like valid Github repository URL</p>
    </div>

    <div class="span6">
      <table class="table table-striped table-bordered">
        <tr>
          <th>Repository name</th>
        </tr>
        <tr>
          <td>First repo</td>
        </tr>
        <tr>
          <td>Second repo</td>
        </tr>
        <tr>
          <td>Third repo</td>
        </tr>
      </table>
    </div>
  </div>
</div>