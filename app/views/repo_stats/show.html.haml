.container-narrow
  .page-header
    %h1
      Stats for 
      =link_to @repo.name, "https://github.com/#{@repo.name}"
  - if @repo.last_commit.nil?
    %h2 Looks like you're the first to ask for this repo statistics.
    %h2 It will be collected within one hour
  - else
    .span4
      %h2 Authors by additions
      %table.table.table-striped.table-bordered
        - @top_add_contribs.each do |contrib|
          %tr
            %td= link_to contrib.author.nickname, "https://github.com/#{contrib.author.nickname}"
            %td= contrib.lines_added
    .span4
      %h2 Authors by deletions
      %table.table.table-striped.table-bordered
        - @top_delete_contribs.each do |contrib|
          %tr
            %td= link_to contrib.author.nickname, "https://github.com/#{contrib.author.nickname}"
            %td= contrib.lines_deleted