<h1>Listing repos</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Last commit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @repos.each do |repo| %>
  <tr>
    <td><%= repo.name %></td>
    <td><%= repo.last_commit %></td>
    <td><%= link_to 'Show', repo %></td>
    <td><%= link_to 'Edit', edit_repo_path(repo) %></td>
    <td><%= link_to 'Destroy', repo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= button_to 'Update stats', updater_update_stats_path(repo_id: repo.id) %></td>
  </tr>
<% end %>
</table>

